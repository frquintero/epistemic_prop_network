{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Layer file schema",
  "type": "object",
  "properties": {
    "layers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "nodes"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "nodes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "expected_output"],
              "properties": {
                "id": { "type": "string" },
                "expected_output": { "type": "string" }
              }
            }
          }
        }
      }
    }
  },
  "required": ["layers"]
}
